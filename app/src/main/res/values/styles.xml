<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="LayoutBasicSetting">
		<item name="background">@color/white</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">?attr/actionBarSize</item>
	</style>
	<!--	textView, editText, toolBar 전부 스타일로 통일 예정   -->

	<style name="AppToolbar" parent="Widget.Material3.Toolbar">
		<item name="titleTextAppearance">@style/AppTextTitle.S22</item>
	</style>

	<!-- 공통 Title 스타일 -->
	<style name="AppToolbarTitle">
		<item name="fontFamily">@font/nanumsquareneo_5</item>
		<item name="android:textSize">22sp</item>
	</style>

	<!-- White Toolbar with Navigation Icon -->
	<style name="AppToolbar.White.WithIcon" parent="Widget.Material3.Toolbar">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">?attr/actionBarSize</item>
		<item name="android:background">@color/white</item>
		<item name="titleTextColor">@color/black</item>
		<item name="navigationIconTint">@color/black</item>
		<item name="titleTextAppearance">@style/AppToolbarTitle</item>
	</style>

	<!-- White Toolbar without Navigation Icon -->
	<style name="AppToolbar.White.NoIcon" parent="Widget.Material3.Toolbar">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">?attr/actionBarSize</item>
		<item name="android:background">@color/white</item>
		<item name="titleTextColor">@color/black</item>
		<item name="titleTextAppearance">@style/AppToolbarTitle</item>
	</style>

	<!-- Green Toolbar with Navigation Icon -->
	<style name="AppToolbar.Green.WithIcon" parent="Widget.Material3.Toolbar">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">?attr/actionBarSize</item>
		<item name="android:background">@color/green100</item>
		<item name="navigationIcon">@drawable/ic_arrow_back_24px</item>
		<item name="titleTextColor">@color/white</item>
		<item name="navigationIconTint">@color/white</item>
		<item name="titleTextAppearance">@style/AppToolbarTitle</item>
	</style>

	<!-- Green Toolbar without Navigation Icon -->
	<style name="AppToolbar.Green.NoIcon" parent="Widget.Material3.Toolbar">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">?attr/actionBarSize</item>
		<item name="android:background">@color/green100</item>
		<item name="titleTextColor">@color/white</item>
		<item name="titleTextAppearance">@style/AppToolbarTitle</item>
	</style>


	<style name="AppTextTitle">
		<item name="fontFamily">@font/nanumsquareneo_5</item>
	</style>

	<style name="AppTextTitle.S22">
		<item name="android:textSize">22sp</item>
	</style>


	<!--	토글 커스텀 버튼   -->
	<style name="ToggleCustom" parent="Widget.MaterialComponents.Button.OutlinedButton">
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="android:insetLeft">0dp</item>
		<item name="android:insetRight">0dp</item>
		<item name="android:minWidth">48dp</item>
		<item name="android:minHeight">48dp</item>
	</style>

</resources>